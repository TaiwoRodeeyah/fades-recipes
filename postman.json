{
  "info": {
    "name": "Fade's Recipes",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    }
  ],
  "item": [
    {
      "name": "Home",
      "item": [
        {
          "name": "Home Endpoint",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/home",
              "host": ["{{baseUrl}}"],
              "path": ["api", "home"]
            }
          }
        }
      ]
    },
    {
      "name": "Contact",
      "item": [
        {
          "name": "Contact Endpoint",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"message\": \"Hello, I have a question.\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/contact",
              "host": ["{{baseUrl}}"],
              "path": ["api", "contact"]
            }
          }
        }
      ]
    },
    {
      "name": "Newsletter",
      "item": [
        {
          "name": "Newsletter Subscription Endpoint",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/newsletter",
              "host": ["{{baseUrl}}"],
              "path": ["api", "newsletter"]
            }
          }
        }
      ]
    },
    {
      "name": "Recipes",
      "item": [
        {
          "name": "All Recipes",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/recipes",
              "host": ["{{baseUrl}}"],
              "path": ["api", "recipes"]
            }
          }
        },
        {
          "name": "Single Recipe",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/recipes/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "recipes", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Create Recipe",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Pasta\",\n  \"short_description\": \"Delicious pasta\",\n  \"category\": \"main-course\",\n  \"calories\": 400,\n  \"time\": 30,\n  \"ingredients\": [\"flour\", \"water\"],\n  \"equipments\": [\"pot\", \"stove\"],\n  \"tags\": [\"italian\", \"easy\"],\n  \"youtube\": \"https://youtube.com\",\n  \"content\": \"Step by step guide\",\n  \"cook\": \"1\",\n  \"image\": \"https://example.com/image.jpg\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/recipes/create",
              "host": ["{{baseUrl}}"],
              "path": ["api", "recipes", "create"]
            }
          }
        },
        {
          "name": "Search Recipes",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/recipes/search?query=:query",
              "host": ["{{baseUrl}}"],
              "path": ["api", "recipes", "search"],
              "query": [
                {
                  "key": "query",
                  "value": "pasta"
                }
              ]
            }
          }
        },
        {
          "name": "Video Recipes",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/recipes/videos",
              "host": ["{{baseUrl}}"],
              "path": ["api", "recipes", "videos"]
            }
          }
        }
      ]
    },
    {
      "name": "Blogs",
      "item": [
        {
          "name": "All Blogs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/blogs",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs"]
            }
          }
        },
        {
          "name": "Single Blog",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/blogs/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Create Blog",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"image\": \"https://example.com/image.jpg\",\n  \"title\": \"Delicious Food\",\n  \"content\": \"This is a blog post about delicious food.\",\n  \"cook\": \"2\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/blogs/create",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs", "create"]
            }
          }
        },
        {
          "name": "Search Blogs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/blogs/search?query=:query",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs", "search"],
              "query": [
                {
                  "key": "query",
                  "value": "food"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "User Recipes",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/users/:userId/recipes",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", ":userId", "recipes"],
              "variable": [
                {
                  "key": "userId",
                  "value": "1"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Database",
      "item": [
        {
          "name": "Seed Database",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/seed",
              "host": ["{{baseUrl}}"],
              "path": ["api", "seed"]
            }
          }
        }
      ]
    }
  ]
}
